{
    "name": "cwmsjs-tests",
    "description": "CWMSjs unit tests for all endpoints",
    "repository": {
        "type": "git",
        "url": "https://github.com/HydrologicEngineeringCenter/cwms-data-api-client-javascript"
    },
    "license": "MIT License",
    "main": "./index.js",
    "type": "module",
    "exports": {
        ".": "./index.js"
    },
    "scripts": {
        "jest-modules": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "test": "npm run jest-modules --",
        "test-cicd": "npm run jest-modules -- --runInBand --ci --detectOpenHandles",
        "coverage": "npm run test --coverage",
        "test:ts": "npm run jest-modules Timeseries.v2.test.js",
        "link": "cd ../src && npm link && cd ../tests && npm link cwmsjs"
    },
    "jest": {
        "clearMocks": true,
        "testMatch": [
            "**/endpoints/**/*.test.js"
        ],
        "coverageDirectory": "coverage",
        "testEnvironment": "node",
        "transform": {
            "^.+\\.[t|j]sx?$": "babel-jest"
        },
        "transformIgnorePatterns": [
            "node_modules/(?!(chalk)/)",
            "node_modules/(?!(node-fetch)/)"
        ]
    },
    "dependencies": {
        "chalk": "^5.3.0",
        "es6-promise": "^4.2.4",
        "jest": "^29.7.0",
        "node-fetch": "^3.3.2",
        "shx": "^0.3.4",
        "url-parse": "^1.4.3",
        "whatwg-fetch": "^3.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.24.4",
        "@babel/preset-env": "^7.24.4",
        "@types/url-parse": "1.4.4",
        "babel-jest": "^29.7.0",
        "jest-junit": "^16.0.0",
        "typedoc": "^0.25.13",
        "typescript": "^4.9.5"
    }
}