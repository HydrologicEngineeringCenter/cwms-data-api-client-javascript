{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES2015",
    "declaration": true,
    "lib": [
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "dom"
    ],
    "moduleResolution": "bundler",
    "sourceMap": true,
    "outDir": "./dist/",
    "removeComments": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "strict": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    
  },
  "exclude": ["./dist/"],
  "include": ["./clients/**/*"]
}
